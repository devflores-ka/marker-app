{
  "name": "marker-app",
  "version": "1.0.0",
  "description": "Software de análisis genético",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:python\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "cd frontend && react-scripts start",
    "dev:python": "cd backend && python app.py",
    "dev:electron": "electron .",
    "build": "npm run build:react && npm run build:python",
    "build:react": "cd frontend && npm run build",
    "build:python": "cd backend && pyinstaller build.spec --clean",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt"
  },
  "build": {
    "appId": "com.marker.app",
    "productName": "Marker App",
    "copyright": "Copyright © 2025 Luciano Flores Rojas",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build-resources/icon.ico"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0",
    "react-scripts": "5.0.1"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1"
  }
}
