{
  "name": "marker-app",
  "version": "1.0.0",
  "description": "Software de análisis genético",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:python\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "cd frontend && npm start",
    "start:python": "cd backend && python app.py",
    "start:electron": "electron .",
    "build": "npm run build:react && npm run build:python",
    "build:react": "cd frontend && npm run build",
    "build:python": "cd backend && pyinstaller build.spec --clean",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt"
  },
  "build": {
    "appId": "com.marker.app",
    "productName": "Marker App",
    "copyright": "Copyright © 2025 Luciano Flores Rojas",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build-resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build-resources/icon.ico",
      "uninstallerIcon": "build-resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Marker App"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devflores-ka/marker-app.git"
  },
  "author": "Luciano Flores Rojas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devflores-ka/marker-app/issues"
  },
  "homepage": "https://github.com/devflores-ka/marker-app#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1"
  }
}